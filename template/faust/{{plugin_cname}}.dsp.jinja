declare name "{{plugin_name}}";
declare description "{{plugin_description}}";
declare author "{{author_name}}";
declare license "{{project_license}}";

import("stdfaust.lib");

freq = hslider("freq",200,50,1000,0.01);
gain = hslider("gain",0.5,0,1,0.01);
gate = button("gate");
attack = hslider("attack",0.01,0.0001,1.5,0.0001);
decay = hslider("decay",0.01,0.0001,1.5,0.0001);
sustain = hslider("sustain",0.8,0,1,0.001);
release = hslider("release",0.1,0.0001,1.5,0.0001);
envelope = en.adsr(attack, decay, sustain, release, gate)*gain;
process = _ : ! : os.sawtooth(freq)*envelope : _;

